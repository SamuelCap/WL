@model WebLabsProj.Models.Person
@{
    ViewData["Title"] = "Create Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border container" style="padding:20px;">
    @* A form that will send the data to the AddEmp view via the HTTPPOST version. *@
    <form method="post">
        <div class="form-group row">
            @* asp-for uses the model to get link the properties to the webpage tags*@
            <div class="col-4">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-8">
                <input asp-for="FirstName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Surname"></label>
            </div>
            <div class="col-8">
                <input asp-for="Surname" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="EmployeeNumber"></label>
            </div>
            <div class="col-8">
                <input asp-for="EmployeeNumber" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Position"></label>
            </div>
            <div class="col-8">
                <input asp-for="Position" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Department"></label>
            </div>
            <div class="col-8">
                <input asp-for="Department" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="DoB"></label>
            </div>
            <div class="col-8">
                <input asp-for="DoB" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-success form-control"> Back to List </a>
            </div>
        </div>
    </form>
</div>
